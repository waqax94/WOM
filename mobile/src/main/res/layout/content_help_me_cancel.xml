<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.HelpMeCancelActivity"
    tools:showIn="@layout/activity_help_me_cancel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/cancel_help_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:background="@drawable/alert_bg"
            android:textAllCaps="false"
            android:padding="20dp"
            android:textSize="30dp"
            android:layout_margin="25dp"
            />

        <TextView
            android:id="@+id/count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cancel_help_me"
            android:text="10"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="90dp"
            android:textColor="@color/colorPrimary"
            android:layout_margin="30dp"/>

        <TextView
            android:id="@+id/cancel_helpme_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel the Helpme Request"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_below="@id/count_down"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>