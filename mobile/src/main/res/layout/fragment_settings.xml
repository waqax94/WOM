<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SettingsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/setting_main_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/paired_rab_details_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton

                    android:id="@+id/paired_rab_details"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:background="@drawable/setting_btn_bg"
                    android:src="@drawable/ic_cast_connected_black_24dp"/>

                <TextView
                    android:id="@+id/paired_rab_id_label"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Paired RAB Details"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@id/paired_rab_details"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/find_my_phone_settings_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/find_my_phone_settings"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Find My Phone - Settings"
                    android:textAllCaps="false"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:background="@drawable/setting_btn_bg"
                    android:src="@drawable/ic_phonelink_setup_black_24dp"/>

                <TextView
                    android:id="@+id/find_my_phone_settings_label"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Find My Phone Settings"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@id/find_my_phone_settings"/>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/test_wom_connection_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/setting_main_button_layout">

            <ImageButton
                android:id="@+id/test_wom_connection"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:background="@drawable/setting_btn_bg"
                android:src="@drawable/ic_speaker_phone_black_24dp"/>
            <TextView
                android:id="@+id/test_wom_connection_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Test WOM Connection"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/test_wom_connection"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/sign_out_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:id="@+id/sign_out_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:background="@drawable/sign_out_bg"
                android:src="@drawable/ic_exit_to_app_black_24dp"/>
            <TextView
                android:id="@+id/sign_out_btn_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/alertColor"
                android:layout_below="@id/sign_out_btn"/>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>